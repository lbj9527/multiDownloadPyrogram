{
  "app": {
    "name": "Telegram消息管理器",
    "version": "1.0.0",
    "window_size": {
      "width": 1200,
      "height": 800
    },
    "theme": "dark",
    "language": "zh"
  },
  "download": {
    "default_path": "./downloads",
    "max_concurrent_downloads": 5,
    "chunk_size": 1024,
    "timeout": 30,
    "auto_create_folders": true
  },
  "logging": {
    "level": "INFO",
    "file_path": "./logs/app.log",
    "max_file_size": "10MB",
    "backup_count": 5,
    "console_output": true
  },
  "ui": {
    "auto_refresh_interval": 1000,
    "show_progress_details": true,
    "confirm_before_download": true,
    "minimize_to_tray": false
  },
  "proxy": {
    "enabled": true,
    "type": "socks5",
    "host": "127.0.0.1",
    "port": 7890,
    "username": "",
    "password": "",
    "test_url": "https://api.telegram.org"
  }
}