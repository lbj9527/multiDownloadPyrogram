# Telegram多客户端下载器配置示例
# 复制此文件为 .env 并修改相应的值

# ==================== Telegram API 配置 ====================
# 从 https://my.telegram.org 获取
API_ID=25098445
API_HASH=cc2fa5a762621d306d8de030614e4555
PHONE_NUMBER=+8618758361347

# 代理配置（可选）
USE_PROXY=true
PROXY_HOST=127.0.0.1
PROXY_PORT=7890

# ==================== 下载任务配置 ====================
# 目标频道（不包含@符号）
TARGET_CHANNEL=csdkl

# 消息范围
START_MESSAGE_ID=71986
END_MESSAGE_ID=72155

# 下载参数
BATCH_SIZE=200
MAX_CONCURRENT_CLIENTS=3

# 目录配置
DOWNLOAD_DIRECTORY=downloads
SESSION_DIRECTORY=sessions

# ==================== 存储模式配置 ====================
# 存储模式选择：
# - raw: 仅下载到本地（默认）
# - upload: 内存下载后上传到目标频道
# - hybrid: 既下载到本地又上传到目标频道
STORAGE_MODE=raw

# ==================== 上传功能配置 ====================
# 是否启用上传功能
UPLOAD_ENABLED=false

# 上传目标频道（包含@符号）
UPLOAD_TARGET_CHANNEL=@your_target_channel

# 格式保持选项
PRESERVE_MEDIA_GROUPS=true
PRESERVE_CAPTIONS=true

# 上传控制参数
UPLOAD_DELAY=1.0
UPLOAD_MAX_RETRIES=3

# ==================== 日志配置 ====================
LOG_LEVEL=INFO
LOG_FILE_ENABLED=true
LOG_FILE_PATH=logs/downloader.log
LOG_CONSOLE_ENABLED=true
VERBOSE_PYROGRAM=false

# ==================== 使用示例 ====================

# 示例1: 仅下载到本地（默认模式）
# STORAGE_MODE=raw
# UPLOAD_ENABLED=false

# 示例2: 仅上传到目标频道（内存模式）
# STORAGE_MODE=upload
# UPLOAD_ENABLED=true
# UPLOAD_TARGET_CHANNEL=@my_backup_channel

# 示例3: 既下载又上传（推荐模式）
# STORAGE_MODE=hybrid
# UPLOAD_ENABLED=true
# UPLOAD_TARGET_CHANNEL=@my_backup_channel

# ==================== 高级配置 ====================
# 存储清理配置
ARCHIVE_AFTER_DAYS=30
CLEANUP_AFTER_DAYS=90

# 网络配置
DEFAULT_TIMEOUT=30
MAX_TIMEOUT=300
CONNECTION_POOL_SIZE=10
